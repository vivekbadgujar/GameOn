{
  "version": 2,
  "builds": [
    {
      "src": "frontend/next.config.js",
      "use": "@vercel/next"
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/server.js"
    },
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "gameonesportbackend.xyz"
        }
      ],
      "destination": "/backend/server.js"
    },
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "gameonesportadmin.xyz"
        }
      ],
      "destination": "/admin-panel/$1"
    },
    {
      "source": "/admin",
      "destination": "/admin-panel"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/admin-panel/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/$1"
    }
  ]
}