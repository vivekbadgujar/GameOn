# GameOn Platform - Environment Variables Template
# Copy this file to .env and fill in the actual values

# Server Configuration
NODE_ENV=development
PORT=5000
API_BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb+srv://gameon:Gameon321@cluster0.g2bfczw.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0
# Or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/gameon-platform

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-secure
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_EXPIRES_IN=7d

# Razorpay Configuration (for UPI payments)
RAZORPAY_KEY_ID=rzp_test_your_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_secret_here
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_here

# SMS/OTP Configuration (for mobile verification)
# Using services like Twilio, MSG91, or AWS SNS
SMS_SERVICE_PROVIDER=twilio
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_secret
SMS_FROM_NUMBER=+1234567890

# Google Cloud Configuration (for Vision API)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_KEY_FILE=path/to/your/service-account-key.json
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Email Configuration (optional)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# File Storage Configuration
# For local storage
UPLOAD_PATH=./uploads
UPLOAD_MAX_SIZE=50MB

# For cloud storage (AWS S3, Cloudinary, etc.)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=gameon-uploads
AWS_REGION=ap-south-1

# Or Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Push Notifications (Firebase)
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_PROJECT_ID=your_firebase_project_id

# Analytics and Monitoring
SENTRY_DSN=your_sentry_dsn_for_error_tracking
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Admin Configuration
ADMIN_EMAIL=admin@gameon.in
ADMIN_PASSWORD=secure_admin_password

# Development Tools
DEBUG=gameon:*
LOG_LEVEL=debug

# Platform Configuration
PLATFORM_NAME=GameOn
PLATFORM_TAGLINE=India's Ultimate BGMI Tournament Platform
SUPPORT_EMAIL=support@gameon.in
SUPPORT_PHONE=+91-9876543210

# Tournament Configuration
MIN_ENTRY_FEE=10
MAX_ENTRY_FEE=500
DEFAULT_TOURNAMENT_DURATION=30
MAX_PARTICIPANTS_PER_TOURNAMENT=100

# Referral System
REFERRAL_BONUS_AMOUNT=20
MAX_REFERRALS_PER_USER=50

# Withdrawal Configuration
MIN_WITHDRAWAL_AMOUNT=100
MAX_WITHDRAWAL_AMOUNT=50000
WITHDRAWAL_PROCESSING_TIME=72

# AI Configuration
AI_CONFIDENCE_THRESHOLD=0.7
CHEAT_DETECTION_THRESHOLD=75
TOXICITY_THRESHOLD=0.8
